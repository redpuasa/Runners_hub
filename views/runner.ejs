<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/naviRunner.ejs') %>

  <section id="profile">
    <div class="container">  
        <div class="row">
            <div class="col-sm-12">
                <div class="container border mt-5 p-5">
                    <h2 class="para text-center mb-5"><%= username %></h2>
                    <div class="row">

                        <div class="col-sm-6">
                            <h3 class="para text-center mb-5"><%= username %>'s Detail</h3>
                            <p class="text-center">Email: <%= email %></p>
                            <p class="text-center">Phone: <%= phone %></p>
                            <p class="text-center">Organization: <%= organization %></p>
                            <p class="text-center">Payment: <%= payment %></p>
                        </div>

                        <div class="col-sm-6">
                            <h3 class="para text-center mb-5">Runner's Charges</h3>
                            <p class="text-center">Brunei Muara - $2.00</p>
                            <p class="text-center">Tutong</p>
                            <p class="text-center">Kuala Belait</p>
                            <p class="text-center">Seria</p>
                            <p class="text-center">Temburong</p>
                            <p class="text-center">Outside Brunei</p>
                        </div>
                    </div>
                </div>
            </div>    
        </div>       
    </div>
  </section>
    
  <section id="request">
    <div class="container">  
        <div class="row">
            <div class="col-sm-12">
                <%- include('partials/runner_request.ejs', {runner: username}) %>
            </div>    
        </div>       
    </div>
  </section>

  <section id="open">
    <div class="container">  
        <div class="row">
            <div class="col-sm-12">
              <%- include('partials/runner_open.ejs', {runner: username}) %>
            </div>    
        </div>       
    </div>
  </section>

  <section id="active">
    <div class="container">  
        <div class="row">
            <div class="col-sm-12">
              <%- include('partials/runner_todo.ejs', {todo: todo}) %>
            </div>    
        </div>       
    </div>
  </section>

  
    <%- include('partials/footer.ejs') %>

    <!-- Bootstrap core JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js" integrity="sha512-XKa9Hemdy1Ui3KSGgJdgMyYlUg1gM+QhL6cnlyTe2qzMCYm4nAZ1PsVerQzTTXzonUR+dmswHqgJPuwCq1MaAg==" crossorigin="anonymous"></script>
    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js" integrity="sha512-0QbL0ph8Tc8g5bLhfVzSqxe9GERORsKhIn1IrpxDAgUsbBGz/V7iSav2zzW325XGd1OMLdL4UiqRJj702IeqnQ==" crossorigin="anonymous"></script>

    <!-- Custom JavaScript for this theme -->
    <script src="js/scrolling-nav.js"></script>
    
</html>