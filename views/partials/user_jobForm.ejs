<!--USER MAKING AN OPEN REQUEST FOR ALL THE RUNNERS-->

<div class="container my-5 p-5">
    <h2 class="para text-center">MAKE A REQUEST</h2>
    <p class="text-center" id="para-runner">This will be seen by all runners</p>
    
    <form id="openOrderForm" method="POST" action="/user_jobForm">
        
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Username">
        </div>

        <div class="form-group">
            <label for="deli-date">Delivery Date</label>
            <input type="date" class="form-control" id="deli_date" name="deli-date" placeholder="Date">
        </div>

        <div class="form-group">
            <label for="deli-time">Delivery Time</label>
            <input type="time" class="form-control" id="deli_time" name="deli-time" placeholder="Time">
        </div>
        
        <div class="form-group">
            <label for="Pickup_Address">Pick-up Address</label>
            <input type="text" class="form-control" id="Pickup_Address" name="Pickup_Address" placeholder="Pick-up Address">
        </div>

        <div class="form-group">
            <label for="Delivery_Address">Delivery Address</label>
            <input type="text" class="form-control" id="Delivery_Address" name="Delivery_Address" placeholder="Delivery Address">
        </div>
        
        <div class="form-group">
            <label for="-">Item Status</label><br>

            <label class="radio-inline"><input type="radio" name="item_stat" id="paid" value="paid">&nbsp; Paid</label>

            <label class="radio-inline"><input type="radio" name="item_stat" id="notPaid-runner" value="notpaid-runner">&nbsp; Not Paid (Paid by Runner)</label>

            <label class="radio-inline"><input type="radio" name="item_stat" id="notPaid-later" value="notpaid-later">&nbsp; Not Paid (Paid Later)</label> 
        </div>

        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="text" class="form-control" id="phone" name="phone">
        </div>

        <div class="form-group">
            <label for="message">Message</label>
            <textarea class="w-100 form-control" id="message" name="message" placeholder="Please enter intsruction, if required."></textarea>
        </div>

        <div class="form-group">
            <input type="hidden" id="orderStatus" name="orderStatus" value="Open">
        </div>
    </form>

    <a class="btn" href="#"><button type="submit" class="btn detail-btn" id="addOpenPost">Post</button></a>
    
</div>