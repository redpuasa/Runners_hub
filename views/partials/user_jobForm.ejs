<div class="container my-5 p-5">
    <h1 class="my-5">User Registration Form</h1>
    <form>
      
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Username">
        </div>

        <div class="form-group">
            <label for="address">Delivery Date</label>
            <input type="date" class="form-control" id="address" placeholder="Date">
        </div>

        <div class="form-group">
            <label for="address">Delivery Time</label>
            <input type="time" class="form-control" id="address" placeholder="Time">
        </div>
        
        <div class="form-group">
            <label for="address">Pick-up Address</label>
            <input type="text" class="form-control" id="Pickup_Address" placeholder="Pick-up Address">
        </div>

        <div class="form-group">
            <label for="address">Delivery Address</label>
            <input type="text" class="form-control" id="Delivery_Address" placeholder="Delivery Address">
        </div>
        
        <div class="form-group">
            <label for="-">Item Status</label><br>
            <label class="radio-inline"><input type="radio" name="paid" id="paid">&nbsp; Paid</label>
            <label class="radio-inline pl-3"><input type="radio" name="notPaid" id="notPaid">&nbsp; Not Paid (Paid by Runner)</label>
            <label class="radio-inline pl-3"><input type="radio" name="notPaid" id="notPaid">&nbsp; Not Paid (Paid Later)</label> 
        </div>

        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="text" class="form-control" id="phone" placeholder="XXXXXXX">
        </div>

        <div class="form-group">
            <label for="message">Message</label>
            <textarea class="w-100 form-control" id="message" placeholder="Please enter intsruction, if required."></textarea>
        </div>
  
    </form>
    
    <button class="btn btn-info">Post</button>
    
</div>