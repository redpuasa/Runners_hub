<div class="container mt-5 p-5 border">
    <h2 class="para text-center">ACTIVE JOB REQUESTED</h2>
    <div class="row">
  
        <div class="col-sm-12">
                    
            <div class="divTable">
                <div class="divTableBody">
    
                    <div class="divTableRow">
                        <div class="divTableCell font-weight-bold">&nbsp;</div>
                        <div class="divTableCell font-weight-bold">&nbsp;</div>
                    </div>

                    <% if(actives.length === 0) { %>
                        <div class="divTableRow">
                            <div class="divTableCell text-center">
                                You have not hired a runner currently
                            </div>
                        </div>
                    <% } else { %>
                    <% actives.forEach(function(order, index) { %>
                    <div class="divTableRow">
                        <div class="divTableCell text-center">Item <%= index + 1 %></div>
                        <div class="divTableCell">
                            <p class="text-center"><%= order.Runner %></p> 
                        </div>
                        <div class="divTableCell d-flex justify-content-center"><button class="btn detail-btn">Details</button></div>
                    </div>
                    <% });} %>       
    
                </div>
            </div>
        </div>
</div>