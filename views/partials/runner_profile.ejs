<div class="container border mt-5 p-5">
    <h2 class="para text-center mb-5"><%= runner.Username %></h2>
    <div class="row">

        <div class="col-sm-6">
            <div class="runner_prof">
                <h3 class="para mb-5"><%= username %>'s Profile</h3>
            </div>
            
            <table>
                <tr>
                    <td>First Name:&nbsp;&nbsp;&nbsp;</td>
                    <td><%= first %></td>
                </tr>
                <tr>
                    <td>Last Name:&nbsp;&nbsp;&nbsp;</td>
                    <td><%= last %></td>
                </tr>
                <tr>
                    <td>Email:&nbsp;&nbsp;&nbsp;</td>
                    <td><%= email %></td>
                </tr>
                <tr>
                    <td>Phone:&nbsp;&nbsp;&nbsp;</td>
                    <td><%= phone %></td>
                </tr>
                <tr>
                    <td>Payment Preference:&nbsp;&nbsp;&nbsp;</td>
                    <td><%= payment %></td>
                </tr>
            </table>
        </div>

        <div class="col-sm-6">
            <h3 class="para mb-5" style="text-align: center;">Runner's Charges</h3>
            <table>
                <tr>
                    <td>Brunei Muara:&nbsp;&nbsp;&nbsp;</td>
                    <td class="px-4 text-center">$<%= brunei %></td>
                </tr>
                <tr>
                    <td>Temburong:&nbsp;&nbsp;&nbsp;</td>
                    <td class="px-4 text-center">$<%= temburong %></td>
                </tr>
                <tr>
                    <td>Tutong:&nbsp;&nbsp;&nbsp;</td>
                    <td class="px-4 text-center">$<%= tutong %></td>
                </tr>
                <tr>
                    <td>Seria:&nbsp;&nbsp;&nbsp;</td>
                    <td class="px-4 text-center">$<%= seria %></td>
                </tr>
                <tr>
                    <td>Kuala Belait:&nbsp;&nbsp;&nbsp;</td>
                    <td class="px-4 text-center">$<%= kb %></td>
                </tr>
                <tr>
                    <td>Outside Brunei:&nbsp;&nbsp;&nbsp;</td>
                    <td class="px-4 text-center">$<%= outside %></td>
                </tr>
            </table>
            <small class="mt-5">All currency in Brunei Dollar(BND)</small>
        </div>
    </div>
</div>