    <h2 class="para text-center mb-5"><%= runner.Username %></h2>
    <div class="row">

        <div class="col-sm-6">
            <h3 class="para text-center mb-5"><%= runner.Username %>'s Detail</h3>
            <p class="text-center">Email: <%= runner.Email %></p>
